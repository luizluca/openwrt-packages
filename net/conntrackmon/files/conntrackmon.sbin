#!/bin/sh
# SPDX-License-Identifier: GPL-3.0-or-later
/usr/sbin/conntrack "$@" |
	if [ -s "$conntrackmon_filter_script" ]; then
		sed -r -f "$conntrackmon_filter_script"
	else
		cat
	fi &

conntrack_pid=$(jobs -p)
filter_pid=$!

trap "kill -TERM '$conntrack_pid'" TERM
trap "kill -INT '$conntrack_pid'" INT

wait "$filter_pid"
